<ul class="media-list">
  <% if @current_user %>
    <% tasks.each do |task| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(task.user, { size: 30 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <td><%= link_to task.id, task %></td>
            <p><%= task.status %></p>
            <p><%= task.content %></p>
          </div>
        </div>
      </li>
    <% end %>
    <%= paginate tasks %>
  <% end %>
</ul>